<Page
    x:Class="Free_Spotify.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:fa="using:FontAwesome.UWP"
    mc:Ignorable="d"
    Background="Black">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="28"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="35" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid x:Name="TitleBar">
                <Rectangle x:Name="BackgroundElement" Fill="Black" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Image Margin="10,0" Source="Assets/StoreLogo.png" />
                    <TextBlock Foreground="White" FontSize="12" Grid.Column="1" VerticalAlignment="Center" Text="Free Spotify" />
                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Border Margin="10" Background="#121212" CornerRadius="6">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="30"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <fa:FontAwesome Icon="Home" Foreground="White" FontSize="24" HorizontalAlignment="Center" />
                        <TextBlock Grid.Column="1" Margin="10,0,0,0" Text="Home" Foreground="White" FontWeight="Bold" FontSize="14" FontFamily="Tahoma" Padding="0,10,0,0"/>
                    </Grid>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="30"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <fa:FontAwesome Margin="0,0,0,5" Icon="Search" Foreground="White" FontSize="20" HorizontalAlignment="Center" />
                        <TextBlock Grid.Column="1" Margin="10,0,0,0" Text="Search" Foreground="White" FontWeight="Bold" FontSize="14" Padding="0,10,0,0" FontFamily="Tahoma"/>
                    </Grid>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="30"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                    </Grid>
                </Grid>
            </Border>
            <Border Margin="10" Grid.Row="1" Background="#121212" CornerRadius="6">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>
                        <fa:FontAwesome Icon="List" Foreground="White" FontSize="24" HorizontalAlignment="Center" />
                        <TextBlock Grid.Column="1" Text="Your Library" Foreground="White" Padding="5,15,0,0" FontFamily="Tahoma" FontWeight="Bold"/>
                        <fa:FontAwesome Grid.Column="2" Icon="Plus" Foreground="White" FontSize="14" HorizontalAlignment="Center" />
                    </Grid>
                    <Grid Grid.Row="1" Name="playListCreation">
                        
                    </Grid>
                </Grid>
            </Border>
            <Border Margin="10" Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" Background="#121212" CornerRadius="6">
            </Border>
        </Grid>
    </Grid>
</Page>