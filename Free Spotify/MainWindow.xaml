<Page
    x:Class="Free_Spotify.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:fa="using:FontAwesome.UWP"
    mc:Ignorable="d"
    Background="Black">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="28"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="35" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Title bar visual -->
            <Grid x:Name="TitleBar">
                <Rectangle x:Name="BackgroundElement" Fill="Black" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <!-- Title bar visual -->
                    <Image Margin="10,0" Source="Assets/StoreLogo.png" />
                    <TextBlock Foreground="White" FontSize="12" Grid.Column="1" VerticalAlignment="Center" Text="Free Spotify" />
                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <!-- Border with home and search pages. -->
            <Border Margin="10" Background="#121212" CornerRadius="6">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="30"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <!-- Home page -->
                        <fa:FontAwesome Margin="5,0,0,5" Icon="Home" Foreground="White" FontSize="24" HorizontalAlignment="Center" />
                        <TextBlock Grid.Column="1" Margin="10.4,0,0,0" Text="Home" Foreground="White" FontWeight="Bold" FontSize="14" FontFamily="Arial" Padding="0,10,0,0"/>
                        <Border Grid.ColumnSpan="2" Background="Transparent" PointerPressed="Home_Clicked"/>
                    </Grid>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="30"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <!-- Search page. -->
                        <fa:FontAwesome Margin="5,0,0,5" Icon="Search" Foreground="White" FontSize="20" HorizontalAlignment="Center" />
                        <TextBlock Grid.Column="1" Margin="10,0,0,0" Text="Search" Foreground="White" FontWeight="Bold" FontSize="14" Padding="0,10,0,0" FontFamily="Arial"/>
                        <Border Grid.ColumnSpan="2" Background="Transparent" PointerPressed="Search_Clicked"/>
                    </Grid>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="30"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                    </Grid>
                </Grid>
            </Border>
            <!-- Border that contains 'playlist' library, or favorite songs if you like. -->
            <Border Margin="10" Grid.Row="1" Background="#121212" CornerRadius="6">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>
                        <fa:FontAwesome Icon="List" Foreground="White" FontSize="24" HorizontalAlignment="Center" />
                        <TextBlock Grid.Column="1" Text="Your Library" Foreground="White" Padding="5,15,0,0" FontFamily="Arial" FontWeight="Bold"/>
                        <fa:FontAwesome Grid.Column="2" Icon="Plus" Foreground="White" FontSize="14" HorizontalAlignment="Center" />
                    </Grid>
                    <!-- This will store all the visuals. (Playlists) -->
                    <Grid Grid.Row="1" Name="playListCreation">
                        <TextBlock Text="There are no saved playlists..." Foreground="Gray" FontFamily="Arial" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16"/>
                    </Grid>
                </Grid>
            </Border>
            <!-- Main frame loader, used to load 'home' page to represent playlists, also the search page to search for the songs. -->
            <Border Margin="10" Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" Background="#121212" CornerRadius="6">
                <Frame Name="loadPage" TabNavigation="Local"/>
            </Border>
        </Grid>
    </Grid>
</Page>