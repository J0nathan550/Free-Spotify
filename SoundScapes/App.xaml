<Application x:Class="SoundScapes.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.modernwpf.com/2019">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Використовується тема Dark з використанням білого кольору як акценту -->
                <ui:ThemeResources RequestedTheme="Dark" AccentColor="White" />
                <!-- Додаток ресурсів для XAML-контролів -->
                <ui:XamlControlsResources />
            </ResourceDictionary.MergedDictionaries>
            <!-- Визначення кольору фону для бічного панелі навігації -->
            <SolidColorBrush x:Key="NavigationViewDefaultPaneBackground" Color="#050505" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
